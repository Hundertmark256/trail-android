<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.amalbit.animationongooglemap">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_app"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <meta-data
      android:name="com.google.android.geo.API_KEY"
      android:value="@string/google_maps_key"/>

    <activity
      android:label="@string/title_activity_maps"
      android:name="com.amalbit.animationongooglemap.PolylineBased.MapsActivity"/>
    <activity
      android:label="@string/title_activity_projection"
      android:name="com.amalbit.animationongooglemap.ProjectionBased.OverlayRouteActivity"
      android:theme="@style/OverlayActivityTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".HomeActivity">
    </activity>
  </application>

</manifest>